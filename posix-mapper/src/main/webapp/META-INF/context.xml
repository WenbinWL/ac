<?xml version='1.0' encoding='utf-8'?>
<Context>

    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <Resource name="jdbc/posix-mapping"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" closeMethod="close"
        minEvictableIdleTimeMillis="60000" timeBetweenEvictionRunsMillis="30000"
        maxWait="20000"
        initialSize="0" minIdle="0" maxIdle="${org.opencadc.science-platform.mapping.maxActive}" maxActive="${org.opencadc.science-platform.mapping.maxActive}"
        username="${org.opencadc.science-platform.mapping.username}" password="${org.opencadc.science-platform.mapping.password}"
        driverClassName="org.postgresql.Driver" url="${org.opencadc.science-platform.mapping.url}"
        removeAbandoned="false"
        testOnBorrow="true" validationQuery="select 123" />

</Context>
